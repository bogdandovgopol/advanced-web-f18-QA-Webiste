{% extends 'base.twig' %}

{% block title %}Questions{% endblock %}
{% block description %}Questions{% endblock %}

{% block body %}

    {% for post in posts %}
        <div class="col-md-12">
            <h2><a href="./post.php?slug={{ post.slug }}">{{ post.title }}</a></h2>
            Tags:
            {% for tag in post.tags %}
                {{ tag.name }},
            {% endfor %}
        </div>
    {% endfor %}

{% endblock %}