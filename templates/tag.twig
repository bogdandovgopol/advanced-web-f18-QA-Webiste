{% extends 'base.twig' %}

{% block title %}Tag: {{ tag }}{% endblock %}
{% block description %}Tag: {{ tag }}{% endblock %}
{% block breadcrumb %}
    <nav class="breadcrumb-bg" aria-label="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">[{{ tag }}]</li>
            </ol>
        </div>
    </nav>
{% endblock %}
{% block body %}

    <div class="container feed">
        {% for post in posts %}
            <div class="row question">
                <div class="d-none d-sm-block col-lg-1 col-md-2 align-self-center">
                    <img class="img-fluid rounded-circle" src="{{ post.author.avatar }}" alt="{{ post.user.fullName }}">
                </div>
                <div class="col-lg-10 col-md-9">
                    <a href="post.php?slug={{ post.slug }}">
                        <h1>{{ post.title }}</h1>
                    </a>
                    <span class="tags">
                        {% for tag in post.tags %}
                            <a href="tag.php?name={{ tag.name }}"><span class="tag">{{ tag.name }}</span></a>
                        {% endfor %}
                    </span>
                    <span class="view-count">Views: {{ post.views }}x</span>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}