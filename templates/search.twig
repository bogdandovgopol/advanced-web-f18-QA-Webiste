{% extends 'base.twig' %}

{% block title %}Search{% endblock %}
{% block description %}Search{% endblock %}

{% block body %}
    <h1>Search results for: "{{ query }}"</h1>

    {% for post in posts if posts is not empty %}
        <div class="col-md-12">
            <h2><a href="./post.php?slug={{ post.slug }}">{{ post.title }}</a></h2>
            Tags:
            {% for tag in post.tags %}
                {{ tag.name }},
            {% endfor %}
        </div>
    {% else %}
        nothing found
    {% endfor %}

{% endblock %}