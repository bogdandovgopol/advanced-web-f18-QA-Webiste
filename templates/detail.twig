{% extends 'base.twig' %}

{% block title %}{{ post.title }}{% endblock %}
{% block description %}{{ post.body | striptags }}{% endblock %}

{% block body %}

    <h1>{{ post.title }}</h1>
    Tags:
    {% for tag in post.tags %}
        {{ tag.name }},
    {% endfor %}
    <br />
    <br />
    <p>{{ post.body }}</p>
{% endblock %}