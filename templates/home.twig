{% extends 'base.twig' %}

{% block title %}Home{% endblock %}
{% block description %}Home{% endblock %}

{% block body %}

    {% for post in posts %}
        <div class="col-md-12">
            <h2><a href="post.php?slug={{ post.slug }}">{{ post.title }}</a></h2>
            Tags:
            {% for tag in post.tags %}
                {{ tag.name }},
            {% endfor %}
            <br/>
            <br/>
            <br/>
            Created by: {{ post.user.fullName }}
        </div>
    {% endfor %}

    USERS:

    {% for user in users %}
        {{ user.email }}
    {% endfor %}

{% endblock %}